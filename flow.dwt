        {literal}
        function checkLoginForm(frm) {
          if (Utils.isEmpty(frm.elements['username'].value)) {
            swal({
				title: 'Oops...',
				text: 'Please enter your email!',
				type: 'error',
	            confirmButtonColor: '#382e83',
			})
			//alert(username_not_null);
            return false;
          }
		  
          if (!Utils.isEmail(frm.elements['username'].value)) {
            swal({
				title: 'Oops...',
				text: 'Please enter a valid email address!',
				type: 'error',
	            confirmButtonColor: '#382e83',
			})
			//alert(email_invalid);
            return false;
          }

          if (Utils.isEmpty(frm.elements['password'].value)) {
            swal({
				title: 'Oops...',
				text: (password_not_null),
				type: 'error',
	            confirmButtonColor: '#382e83',
			})
			//alert(password_not_null);
            return false;
          }

          return true;
        }

        {/literal}
        </script> 
