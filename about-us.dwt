<script type="text/javascript">
	//Scroll tab
	$(function() {

	    //Detail page page scroll tab top fixed
	    $(window).scroll(function() {
	        if ($(window).scrollTop() > $(".abtus-menu").offset().top) {
	            $(".abtus-menu2").addClass("show");
	            autoTab();
	        } else {
	            $(".abtus-menu2").removeClass("show");
	        }
	    });

	    //Details page tab click
	    $(".abtus-menu2,.abtus-menu").find("a").click(function() {
	        var n = $(".abtus-menu2,.abtus-menu").find("a").index($(this));
	        n = n % 3;
	        switch (n) {
	            case 0:
	                $("html,body").animate({
	                    scrollTop: $(".abtus-menu").offset().top - 0
	                }, 200)
	                break;
	            case 1:
	                $("html,body").animate({
	                    scrollTop: $(".abtus-culture").offset().top - 70
	                }, 200)
	                break;
	            case 2:
	                $("html,body").animate({
	                    scrollTop: $(".abtus-contact").offset().top - 70
	                }, 200)
	                break;
	        }
	    });
	});


	function autoTab() { //Scroll Auto Switch tab
	    var tb1 = $(".abtus-menu a").eq(0);
	    var tb2 = $(".abtus-menu a").eq(1);
	    var tb3 = $(".abtus-menu a").eq(2);
	    var tb1clone = $(".abtus-menu2 a").eq(0);
	    var tb2clone = $(".abtus-menu2 a").eq(1);
	    var tb3clone = $(".abtus-menu2 a").eq(2);
	    var goodsDetail = $(".abtus-menu");
	    var goodsParam = $(".abtus-culture");
	    var goodsComment = $(".abtus-contact");
	    if ($(window).scrollTop() + 80 > goodsComment.offset().top) {
	        if (!tb3.hasClass("now")) {
	            tb3.addClass("now").siblings().removeClass("now");
	            tb3clone.addClass("now").siblings().removeClass("now");
	        }
	    } else if ($(window).scrollTop() + 80 > goodsParam.offset().top) {
	        if (!tb2.hasClass("now")) {
	            tb2.addClass("now").siblings().removeClass("now");
	            tb2clone.addClass("now").siblings().removeClass("now");
	        }
	    } else if (!tb1.hasClass("now")) {
	        tb1.addClass("now").siblings().removeClass("now");
	        tb1clone.addClass("now").siblings().removeClass("now");
	    }
	}

	$(function() {


	});
</script>
